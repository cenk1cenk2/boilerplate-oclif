{
  "name": "root",
  "private": true,
  "repository": "https://github.com/cenk1cenk2/boilerplate-oclif",
  "scripts": {
    "ls": "lerna la",
    "bootstrap": "lerna bootstrap ${ARGS} --scope ${PACKAGE:-''} --",
    "rimraf": "rimraf node_modules && lerna clean --scope ${PACKAGE:-''} -y",
    "release": "lerna publish -y",
    "exec": "lerna exec --scope ${PACKAGE:-''} --stream --no-bail --parallel",
    "command": "lerna run --scope ${PACKAGE:-''} --stream --no-bail --parallel",
    "link-packages": "lerna link --force-local"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn command lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "commitizen": "^4.0.5",
    "@cenk1cenk2/cz-cc": "^1.0.2",
    "husky": "^4.2.5",
    "lerna": "^3.20.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}