{
  "name": "@cenk1cenk2/oclif-boilerplate",
  "description": "A CLI boilerplate.",
  "version": "0.0.0",
  "author": "Cenk Kilic <cenk@kilic.dev>",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "cli": "bin/run.js"
  },
  "repository": "https://github.com/cenk1cenk2/oclif-boilerplate",
  "scripts": {
    "start": "TS_NODE=1 bin/run.js $command",
    "start:debug": "yarn start $command --debug",
    "start:inspect": "yarn start $command --inspect",
    "build": "tsc -p tsconfig.json && tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "lint": "yarn lint:staged src/",
    "lint:staged": "eslint --ext .json,.ts,.js --fix",
    "dev:lint": "lint-staged",
    "release": "yarn lint && yarn readme",
    "readme": "yarn oclif-dev readme",
    "oclif": "oclif $command",
    "oclif-dev": "node -r tsconfig-paths/register node_modules/@oclif/dev-cli/bin/run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn dev:lint && yarn readme && git add README.md"
    }
  },
  "lint-staged": {
    "src/*.{ts,js,json}": [
      "yarn lint:staged"
    ]
  },
  "files": [
    "bin/",
    "config/",
    "dist/"
  ],
  "oclif": {
    "commands": "./dist/commands",
    "bin": "cenk1cenk2",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-warn-if-update-available",
      "@tiagonapoli/oclif-plugin-spaced-commands"
    ],
    "hooks": {
      "init": "./dist/hooks/init",
      "command_not_found": "./dist/hooks/not-found",
      "prerun": "./dist/hooks/prerun"
    }
  },
  "warn-if-update-available": {
    "timeoutInDays": 7,
    "message": "<%= config.name %> update available from <%= chalk.greenBright(config.version) %> to <%= chalk.greenBright(latest) %>."
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "keywords": [
    "oclif",
    "cenk1cenk2"
  ],
  "license": "MIT",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/errors": "^1.2.2",
    "@oclif/plugin-help": "^2",
    "@oclif/plugin-warn-if-update-available": "^1.7.0",
    "@tiagonapoli/oclif-plugin-spaced-commands": "^0.0.2",
    "cli-cursor": "^3.1.0",
    "config": "^3.3.0",
    "deepmerge": "^4.2.2",
    "execa": "^4.0.0",
    "fs-extra": "^9.0.0",
    "globby": "^11.0.0",
    "listr2": "1.3.4",
    "object-path": "^0.11.4",
    "object-path-immutable": "^4.1.0",
    "pad": "^3.2.0",
    "table": "^5.4.6",
    "tslib": "^1.11.1",
    "types": "^0.1.1",
    "winston": "^3.2.1",
    "yaml": "^1.8.2"
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "0.1.0",
    "@oclif/dev-cli": "^1.22.2",
    "@types/config": "^0.0.36",
    "@types/fs-extra": "^8.1.0",
    "@types/node": "^13.9.2",
    "@types/object-path": "^0.11.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "ts-node": "^8.7.0",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^3.8.3"
  }
}
