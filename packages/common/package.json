{
  "name": "@cenk1cenk2/boilerplate-oclif",
  "description": "Base custom boilerplate for oclif.",
  "version": "1.0.0-development",
  "author": "Cenk Kilic <cenk@kilic.dev>",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "boilerplate-oclif-cli": "bin/run.js"
  },
  "repository": "https://github.com/cenk1cenk2/boilerplate-oclif",
  "scripts": {
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json && tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "dev:start": "yarn dev:build && TS_NODE_PROJECT='tsconfig.paths.json' tsc-watch --noClear --onSuccess \"yarn dev:start:onSuccess\"",
    "dev:start:onSuccess": "tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "lint": "prettier --write src/ && eslint --ext .json,.ts,.js --fix src/"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{ts,js,json}": [
      "prettier --write",
      "eslint --ext .json,.ts,.js --fix"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "config": "^3.3.1",
    "object-path": "^0.11.4",
    "object-path-immutable": "^4.1.0",
    "table": "^5.4.6",
    "tslib": "^2.0.0",
    "types": "^0.1.1",
    "winston": "^3.3.3",
    "yaml": "^1.10.0"
  },
  "peerDependencies": {
    "@oclif/command": ">= 1.7.0 < 2",
    "@oclif/config": ">= 1.16.0 < 2",
    "deepmerge": ">= 4.2.2",
    "execa": ">= 4.0.3",
    "fs-extra": ">= 9.0.1",
    "globby": ">= 11.0.1",
    "listr2": ">= 2.3.3"
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "^0.4.0",
    "@oclif/command": "^1.7.0",
    "@oclif/config": "^1.16.0",
    "@oclif/dev-cli": "^1.22.2",
    "@types/config": "^0.0.36",
    "@types/figures": "^3.0.1",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.6",
    "@types/object-path": "^0.11.0",
    "cz-conventional-changelog": "3.2.0",
    "deepmerge": "^4.2.2",
    "eslint": "^7.1.0",
    "execa": "^4.0.3",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.7",
    "listr2": "^2.2.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "tsc-watch": "^4.2.8",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^3.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}