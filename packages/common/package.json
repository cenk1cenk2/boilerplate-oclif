{
  "name": "@cenk1cenk2/boilerplate-oclif",
  "description": "Base custom boilerplate for oclif.",
  "version": "1.0.0",
  "author": "Cenk Kilic <cenk@kilic.dev>",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/cenk1cenk2/boilerplate-oclif",
  "scripts": {
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tscpaths -p tsconfig.paths.json -s ./dist -o ./dist",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && yarn postbuild",
    "dev:start": "yarn dev:build && TS_NODE_PROJECT='tsconfig.paths.json' tsc-watch --noClear --onSuccess \"yarn postbuild\"",
    "lint": "prettier --write src/ --loglevel warn && eslint --ext .ts,.js,.tsx,.jsx --fix src/",
    "lint:check": "eslint --ext .ts,.js,.tsx,.jsx src/",
    "lint:staged": "lint-staged"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./*.{ts,js,tsx,jsx}": [
      "prettier --loglevel warn --write",
      "eslint --fix"
    ],
    "./*.{json,md}": [
      "prettier --loglevel warn --write"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.0",
    "config": "^3.3.3",
    "deepmerge": "^4.2.2",
    "figures": "^3.2.0",
    "object-path-immutable": "^4.1.1",
    "table": "^6.0.7",
    "tslib": "^2.1.0",
    "types": "^0.1.1",
    "winston": "^3.3.3",
    "yaml": "^1.10.0"
  },
  "peerDependencies": {
    "@oclif/command": ">= 1.7.0 < 2",
    "@oclif/config": ">= 1.16.0 < 2",
    "@oclif/errors": ">= 1.3.0 < 2",
    "execa": ">= 4.0.0",
    "fs-extra": ">= 9.0.0",
    "globby": ">= 11.0.0",
    "listr2": ">= 2.5.0"
  },
  "devDependencies": {
    "@cenk1cenk2/eslint-config": "^0.4.30",
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/errors": "^1.3.4",
    "@types/config": "^0.0.38",
    "@types/figures": "^3.0.1",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/object-path": "^0.11.0",
    "eslint": "^7.18.0",
    "execa": "^5.0.0",
    "fs-extra": "^9.1.0",
    "globby": "^11.0.2",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "listr2": "^3.3.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.1.3"
  }
}
